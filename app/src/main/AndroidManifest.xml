<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home.test">

    <application
        android:name=".di.ContactBookApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.addcontact.AddContactActivity"
            android:label="@string/add_new_contact" />

        <activity
            android:name=".ui.contactdetails.ContactDetailsActivity"
            android:windowSoftInputMode="adjustNothing"
            android:label=""/>

        <activity
            android:name=".ui.contacts.ContactsActivity"
            android:label="@string/address_book">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>